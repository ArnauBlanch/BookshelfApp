<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="24dp"
    android:paddingTop="12dp"
    android:paddingRight="24dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crónica de una muerte anunciada"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/book_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(9999)"
                android:layout_weight="0"
                android:textSize="11sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Author"
                android:textSize="12sp"
                android:paddingTop="6dp"
                android:textColor="@color/primary_dark_material_dark"
                android:layout_below="@+id/book_title"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:id="@+id/separator"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="6dp"
                android:layout_weight="0"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/book_author"
                android:layout_alignTop="@+id/book_author"
                android:layout_alignBottom="@+id/book_author"/>

            <TextView
                android:id="@+id/book_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Publisher"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/separator"
                android:layout_alignTop="@+id/book_author"
                android:layout_alignBottom="@id/book_author"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/book_persEval"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:maxLines="1"
        android:layout_gravity="center_vertical|right"
        android:text="VERY GOOD"
        android:textAppearance="@android:style/TextAppearance.Material.SearchResult.Title"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="10sp"
        android:layout_marginLeft="6dp"
        android:paddingTop="5dp"
        android:gravity="center_vertical|right" />
</LinearLayout>
