<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="24dp"
    android:paddingTop="12dp"
    android:paddingRight="24dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/title_year_layout">
        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Title"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/book_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(9999)"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:layout_alignTop="@+id/book_persEval" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/title_year_layout"
        android:id="@+id/author_publisher_layout"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Author"
            android:textSize="14sp"
            android:textColor="@color/primary_dark_material_dark" />

        <TextView
            android:id="@+id/book_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Publisher"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:paddingLeft="5dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/book_persEval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGULAR"
        android:textAppearance="@android:style/TextAppearance.Material.SearchResult.Title"
        android:paddingLeft="16dp"
        android:textColor="#000000"
        android:textSize="10sp"
        android:paddingTop="5dp"
        android:textAllCaps="true"
        android:gravity="top|right"
        android:layout_alignParentEnd="true" />


</RelativeLayout>